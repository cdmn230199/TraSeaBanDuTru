<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SearchFrag">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/story_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:elevation="2dp">


        <EditText
            android:layout_marginRight="@dimen/constanSize15"
            android:id="@+id/edt_search_mess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_search_background"
            android:hint="Search"
            android:padding="7dp" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_search_mes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/story_toolbar"
        android:layout_marginTop="7dp" />


</RelativeLayout>