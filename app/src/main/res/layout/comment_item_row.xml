<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/constant10">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_person_64x64"
        android:id="@+id/iv_avt_cmt_item"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/constanSize5"
        android:orientation="vertical"
        android:layout_toEndOf="@id/iv_avt_cmt_item">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User name"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/tv_username_cmt_item"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_cmt_content_item"
            android:text="Your Comment here"
            android:maxLines="5"/>

    </LinearLayout>

</RelativeLayout>